{
    "compilerOptions": {
        // General
        "newLine": "LF",
        "removeComments": false,
        "moduleResolution": "node",
        "strict": true,
		"useDefineForClassFields": true,
		// Per-project
		"esModuleInterop": true,
		"target": "ES2021",
		"module": "ES2020",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
